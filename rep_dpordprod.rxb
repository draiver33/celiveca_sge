  1MensajeErr(cMsg,"Reporte <REPORTE>")
  2.F.
 14
  4!oGenRep:OutPut(.T.)
  2.F.
 14
  1oCursor:=OpenTable(cSql,.T.)
  4oCursor:RecCount()=0
  1MensajeErr("No fué posible Encontrar Información","Consulta Vacia Reporte <REPORTE>")
  1oCursor:End()
  2.F.
 14
  1oCursor:GoTop()
  1oFont1 := TFont():New("ARIAL",0,-10,,,,,,,,,,,,,,)
  1oFont2 := TFont():New("ARIAL",0,-10,,.T.,,,,,,,,,,,,)
  1oReport := DpRptBegin({{||"Orden de Producción"},{||"Fecha: "+dtoc(Date())+" Hora: "+TIME()}},{},{{||"Página: "+str(oReport:nPage,3)+" Registros: "+alltrim(str(nLineas,5))}},{oFont1,oFont2},{},.F.,,,,.T.,,,"Orden de Producción",,,UPPER("CENTER") )
  1oGenRep:SetDevice(oReport)
  1DpRptAddColumn({{||"Número"}},,{{||oCursor:ORP_NUMERO}},8,{},,.F.,,UPPER("LEFT"),.F.,.F.,)
  1DpRptAddColumn({{||"Fecha"}},,{{||oCursor:ORP_FECHA}},8,{"99/99/9999"},,.F.,,UPPER("LEFT"),.F.,.F.,)
  1DpRptAddColumn({{||"Producto"}},,{{||oCursor:ORP_CODINV}},20,{},,.F.,,UPPER("LEFT"),.F.,.F.,)
  1DpRptAddColumn({{||"Descripción"}},,{{||oCursor:INV_DESCRI}},40,{},,.F.,,UPPER("LEFT"),.F.,.F.,)
  1DpRptAddColumn({{||"Cantidad"}},,{{||oCursor:ORP_CANTID}},16,{"99,999,999,999,999.999"},{||2},.T.,,UPPER("RIGHT"),.F.,.F.,)
  1DpRptEnd()
  1oReport:bSkip:={||oCursor:DbSkip()}
  1oReport:Activate(,{||!oCursor:Eof()},,,{||RepBitmap()},,{|oGrp|oReport:NewLine()},,,,{||ONCHANGE()},,,)
  1oGenRep:OutPut(.F.)
  1oFont1:End()
  1oFont2:End()
  2NIL
FUNCTION ONCHANGE
  1nLineas:=nLineas+1
  2.T.
FUNCTION PRINTMEMOcMemo,nCol,lData,nIni
 17nFor,aLines
